# Пример переменных окружения для app-server
# Скопируйте в .env и настройте под свои нужды

PORT=3001
NODE_ENV=development

# MongoDB подключение (для локальной разработки)
DATABASE_URL=mongodb://admin:mongodb_admin_pwd@localhost:27017,localhost:27018,localhost:27019/app_database?replicaSet=rs0&authSource=admin

# MongoDB настройки
MONGODB_REPLICA_SET_NAME=rs0
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=mongodb_admin_pwd
MONGODB_DATABASE=app_database