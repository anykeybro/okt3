{
  "name": "app-server",
  "version": "1.0.0",
  "description": "Node.js сервер с TypeScript и Prisma для MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:kafka": "tsx src/scripts/test-kafka-integration.ts",
    "validate-env": "yarn build && node scripts/validate-env.js",
    "validate-env:dev": "yarn build && node scripts/validate-env.js --env=development",
    "validate-env:prod": "yarn build && node scripts/validate-env.js --env=production",
    "generate-env-example": "yarn build && node scripts/generate-env-example.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:indexes": "tsx ../../scripts/create-indexes.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "axios": "1.12.2",
    "bcrypt": "6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "8.1.0",
    "express-slow-down": "3.0.0",
    "express-validator": "7.2.1",
    "helmet": "8.1.0",
    "ioredis": "5.8.0",
    "isomorphic-dompurify": "2.28.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "9.0.2",
    "kafkajs": "^2.2.4",
    "mongodb": "6.20.0",
    "node-cron": "4.2.1",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-slow-down": "2.0.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mongodb": "4.0.7",
    "@types/node": "^20.10.0",
    "@types/node-cron": "3.0.11",
    "@types/supertest": "6.0.3",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "cross-env": "10.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
