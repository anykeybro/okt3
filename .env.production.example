# Пример файла с чувствительными данными для продакшена
# Скопируйте этот файл в .env.production и измените пароли на безопасные

# Сервер настройки
PORT=3001
HOST=0.0.0.0
NODE_ENV=production
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com

# Учетные данные базы данных
POSTGRES_USER=zabbix
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=zabbix

# Учетные данные администраторов
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_GRAFANA_PASSWORD
GRAFANA_ZABBIX_USER=Admin
GRAFANA_ZABBIX_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# MongoDB настройки
MONGODB_REPLICA_SET_NAME=rs0
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=CHANGE_ME_SECURE_MONGODB_PASSWORD
MONGODB_DATABASE=app_database
DATABASE_URL=mongodb://admin:CHANGE_ME_SECURE_MONGODB_PASSWORD@mongodb-primary:27017,mongodb-secondary:27017,mongodb-arbiter:27017/app_database?replicaSet=rs0&authSource=admin
DB_MAX_POOL_SIZE=20
DB_TIMEOUT=10000

# Kafka настройки
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=app-server-prod
KAFKA_GROUP_ID=app-server-group-prod

# JWT настройки
JWT_SECRET=CHANGE_ME_VERY_SECURE_JWT_SECRET_KEY_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Биллинг настройки
BILLING_CHECK_INTERVAL=3600000
BILLING_AUTO_BLOCK=true
DEFAULT_BLOCK_THRESHOLD=0

# Telegram Bot
TELEGRAM_BOT_TOKEN=CHANGE_ME_TELEGRAM_BOT_TOKEN
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# SMS Gateway (Huawei E3372)
SMS_GATEWAY_IP=CHANGE_ME_SMS_GATEWAY_IP
SMS_GATEWAY_USERNAME=CHANGE_ME_SMS_USERNAME
SMS_GATEWAY_PASSWORD=CHANGE_ME_SMS_PASSWORD
SMS_GATEWAY_PORT=80

# Уведомления
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Robokassa
ROBOKASSA_MERCHANT_ID=CHANGE_ME_ROBOKASSA_MERCHANT_ID
ROBOKASSA_PASSWORD1=CHANGE_ME_ROBOKASSA_PASSWORD1
ROBOKASSA_PASSWORD2=CHANGE_ME_ROBOKASSA_PASSWORD2
ROBOKASSA_TEST_MODE=false

# Yandex Maps
YANDEX_MAPS_API_KEY=CHANGE_ME_YANDEX_MAPS_API_KEY

# Безопасность
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50

# MikroTik настройки
MIKROTIK_DEFAULT_PORT=8728
MIKROTIK_DEFAULT_TIMEOUT=10000
MIKROTIK_HEALTH_CHECK_INTERVAL=300000
MIKROTIK_MAX_RETRIES=3
MIKROTIK_RETRY_DELAY=5000

# Мониторинг
ZABBIX_URL=http://localhost/zabbix
GRAFANA_URL=http://localhost/grafana
HEALTH_CHECK_INTERVAL=30000

# Dashboard настройки
DASHBOARD_CACHE_TTL=300
DASHBOARD_CACHE_CLEANUP_INTERVAL=300000
DASHBOARD_MAX_ACTIVITY=50
DASHBOARD_MAX_TOP_CLIENTS=50
DASHBOARD_MAX_LOW_BALANCE=50
DASHBOARD_LOW_BALANCE_THRESHOLD=100
DASHBOARD_MAX_DATE_RANGE_DAYS=365

# Логирование для продакшена
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=50m
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=true
LOG_DIRECTORY=logs
AUDIT_RETENTION_DAYS=365

# HTTP логирование для продакшена (консервативные настройки)
LOG_HTTP_REQUESTS=true
LOG_HTTP_REQUEST_BODY=false
LOG_HTTP_RESPONSE_BODY=false
LOG_HTTP_HEADERS=false
LOG_HTTP_MAX_BODY_SIZE=500
LOG_HTTP_EXCLUDE_PATHS=/health,/api-docs,/favicon.ico,/metrics
LOG_HTTP_SENSITIVE_FIELDS=password,token,secret,authorization,jwt,key,pass