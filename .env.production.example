# Настройки базы данных для продакшена
POSTGRES_USER=zabbix
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=zabbix

# Настройки Zabbix Server
ZBX_DEBUGLEVEL=2
ZBX_CACHESIZE=256M
ZBX_HISTORYCACHESIZE=128M
ZBX_HISTORYINDEXCACHESIZE=32M
ZBX_TRENDCACHESIZE=32M
ZBX_VALUECACHESIZE=128M

# Порты для продакшена
ZABBIX_SERVER_PORT=10051
ZABBIX_WEB_HTTP_PORT=80
ZABBIX_WEB_HTTPS_PORT=443
ZABBIX_JAVA_GATEWAY_PORT=10052
ZABBIX_AGENT_PORT=10050
POSTGRES_PORT=5432

# Настройки веб-интерфейса
PHP_TZ=Europe/Moscow
ZBX_SERVER_NAME=Zabbix Production
NGINX_CLIENT_MAX_BODY_SIZE=32m

# Настройки Java Gateway
ZBX_JAVA_GATEWAY_DEBUG_LEVEL=warn
ZBX_JAVA_GATEWAY_TIMEOUT=5

# Настройки Agent
ZBX_HOSTNAME=Zabbix Production Server
ZBX_AGENT_DEBUG_LEVEL=2
ZBX_PASSIVE_ALLOW=true
ZBX_ACTIVE_ALLOW=true

# Контейнеры
POSTGRES_CONTAINER_NAME=zabbix-postgres-prod
ZABBIX_SERVER_CONTAINER_NAME=zabbix-server-prod
ZABBIX_WEB_CONTAINER_NAME=zabbix-web-prod
ZABBIX_JAVA_GATEWAY_CONTAINER_NAME=zabbix-java-gateway-prod
ZABBIX_AGENT_CONTAINER_NAME=zabbix-agent-prod
NGINX_CONTAINER_NAME=zabbix-nginx-prod

# Дополнительные настройки безопасности для продакшена
ZBX_ENABLE_SNMP_TRAPS=false
ZBX_STARTPOLLERS=5
ZBX_STARTPOLLERSUNREACHABLE=1
ZBX_STARTTRAPPERS=5
ZBX_STARTPINGERS=1
ZBX_STARTDISCOVERERS=1
ZBX_STARTHTTPPOLLERS=1