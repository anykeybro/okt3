{
  "name": "workspace-project",
  "version": "1.0.0",
  "description": "Проект с использованием yarn workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "setup-env.cmd",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "dev": "yarn dev:zabbix && yarn workspaces run dev",
    "dev:app": "yarn workspaces run dev",
    "dev:zabbix": "docker-compose --env-file .env.development -f docker-compose.dev.yml up -d",
    "dev:zabbix:logs": "docker-compose --env-file .env.development -f docker-compose.dev.yml logs -f",
    "dev:zabbix:stop": "docker-compose --env-file .env.development -f docker-compose.dev.yml down",
    "dev:full": "yarn dev:zabbix && yarn dev:app",
    "prod:zabbix": "docker-compose --env-file .env.production -f docker-compose.production.yml up -d",
    "prod:zabbix:logs": "docker-compose --env-file .env.production -f docker-compose.production.yml logs -f",
    "prod:zabbix:stop": "docker-compose --env-file .env.production -f docker-compose.production.yml down",
    "clean": "yarn workspaces run clean"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}